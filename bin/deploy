#!/bin/sh

set -e

cd "$(dirname "$0")"/..

bin/gencert
bin/fetch_images
bin/portainer

(
    set +e

    (
        set -e
        docker-compose build --force-rm
        docker-compose run --rm web flask init-db
        docker-compose up -d
    )
    ret=$?

    docker image prune -f >/dev/null
    docker builder prune -f >/dev/null

    exit $ret
)

echo "Deployment successful."
